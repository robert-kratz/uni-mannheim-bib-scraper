datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BibData {
  id         Int      @id @default(autoincrement())
  percentage Int
  name       String
  year       Int
  month      Int
  day        Int
  chunk      Int
  iat        DateTime
}

model BibPredictionData {
  id         Int      @id @default(autoincrement())
  percentage Int
  name       String
  year       Int
  month      Int
  day        Int
  chunk      Int
  iat        DateTime
}

model CalendarEvent {
  id    Int       @id @default(autoincrement())
  name  String
  type  EventType
  start DateTime
  end   DateTime
}

enum EventType {
  lecture
  exam
  holiday
  break
  event
}
